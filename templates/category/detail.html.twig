{% extends 'base.html.twig' %}

{% block title %}Détail de la catégorie{% endblock %}

{% block body %}
<h1>Détail de la catégorie</h1>

<p><strong>ID :</strong> {{ category.id }}</p>
<p><strong>Nom :</strong> {{ category.name }}</p>

<a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning">Éditer</a>

<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>

<a href="{{ path('category_list') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
